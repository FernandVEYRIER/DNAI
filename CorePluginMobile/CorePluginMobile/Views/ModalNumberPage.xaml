<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorePluginMobile.Views.ModalNumberPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="DNAI found the number..."
				   Margin="10, 0"
                HorizontalOptions="CenterAndExpand" />
			<Label Text="{Binding TextNumber}"
				   FontSize="200"
				   HorizontalOptions="CenterAndExpand"
				   VerticalOptions="CenterAndExpand"/>
			<Label Text="{Binding TextAccuracy}"
				   HorizontalOptions="CenterAndExpand"/>
			<Button Text="Close" Clicked="OnCloseModalAsync"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>